            android:minHeight="48dp"
            android:text="@string/closing"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toEndOf="@+id/infoQualOpeningCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/infoQualificationsLabel" />

        <ImageView
