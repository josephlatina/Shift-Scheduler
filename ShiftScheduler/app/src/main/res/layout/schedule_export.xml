<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ScheduleExport">

    <TextView
        android:id="@+id/exportTextView"
        android:layout_width="374dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/export_to_pdf_of_a_month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedMonth"
        android:layout_width="115dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/month_year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportTextView" />

    <Button
        android:id="@+id/selectMonthBtn"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/select_month_year"
        android:onClick="selectMonth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedMonth" />

    <Button
        android:id="@+id/ExportPDFbtn"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:text="@string/export_to_pdf"
        android:onClick="exportPDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedMonth" />

</androidx.constraintlayout.widget.ConstraintLayout>